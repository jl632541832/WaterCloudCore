            elem: '#test1',
            eventElem: '.layui-date1',
            type: 'month',
            trigger: 'click',
            done: (value) => {
                //赋值
                $('#test1').val(value);
                //执行指定方法
                loadOne();
            }
        });
        laydate.render({
            elem: '#test2',
            eventElem: '.layui-date2',
            type: 'month',
            trigger: 'click',
            done: (value) => {
