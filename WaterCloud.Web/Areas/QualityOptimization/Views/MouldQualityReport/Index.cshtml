                                fontWeight: 'bold',
                                color: '#000000',
                                fontFamily: '微软雅黑',
                                fontSize: 25,
                            },
                            key: {
                                fontWeight: 'bold',
                                color: '#000000',
                                fontFamily: '微软雅黑',
                                fontSize: 15,
                            }
                        }

                    },
                    subtextStyle: {
                        lineHeight: 30,
                        fontSize: 15
                    }
                }, {
                        text: '{num|' + data.key + '}{key|(个)}',
                        subtext: data.name,
                        x: '25%',
                        y: '10%',
                        textAlign: 'center',
                        textStyle: {
                            rich: {
                                num: {
                                    fontWeight: 'bold',
                                    color: '#000000',
                                    fontFamily: '微软雅黑',
                                    fontSize: 25,
                                },
                                key: {
                                    fontWeight: 'bold',
                                    color: '#000000',
                                    fontFamily: '微软雅黑',
                                    fontSize: 15,
                                }
                            }

                        },
                        subtextStyle: {
                            lineHeight: 30,
                            fontSize: 15
                        }
                    }],
                data: [{
                    name: data.name,
                }],
                series: [{ // 主圆环
                    name: data.name,
                    type: 'pie',
                    radius: ['50%', '70%'],
                    startAngle: 225,
                    color: [{
                        type: 'linear',
                        x: 1,
                        y: 0,
                        x2: 0,
                        y2: 0,
                        colorStops: [{
                            offset: 0,
                            color: 'rgba(51,227,189,1)' // 0% 处的颜色
                        }, {
                            offset: 1,
                            color: 'rgba(51,227,189,.1)' // 100% 处的颜色
                        }]
                    }, 'transparent'],
                    hoverAnimation: true,
                    legendHoverLink: false,
                    z: 10,
                    labelLine: {
                        normal: {
                            show: false
                        }
                    },
                    data: [{
                        value: 75 * data.value / 100
                    }, {
                        value: 100 - (75 * data.value / 100)
                    }]
                }, { // 背景圆环
                    name: '',
                    type: 'pie',
                    radius: ['50%', '70%'],
                    silent: true,
                    startAngle: 225,
                    labelLine: {
                        normal: {
                            show: false
                        }
                    },
                    z: 5,
                    data: [{
                        value: 75,
                        itemStyle: {
                            color: '#1A3B4C'
                        }
                    }, {
                        value: 25,
                        itemStyle: {
                            color: 'transparent'
                        }
                    }]
                }, { // 中间圈
                    name: '',
                    z: 5,
                    type: 'pie',
                    cursor: 'default',
                    radius: ['45%', '45%'],
                    startAngle: 225,
                    hoverAnimation: false,
                    legendHoverLink: false,
                    labelLine: {
                        normal: {
                            show: false
                        }
                    },
                    data: [{
                        value: 75,
                        itemStyle: {
                            borderColor: 'rgba(51,123,321,1)',
                            borderType: 'dashed'
                        }
                    }, {
                        value: 25,
                        itemStyle: {
                            color: 'transparent'
                        }
                    }]
                }]
            };

            myChart.setOption(option, true);
            // echarts 窗口缩放自适应
            window.addEventListener("resize", function () {
                myChart.resize();
            });
        }
        function loadThree() {
            var listDeviceType = new Array();
            var listNumber = new Array();
            var keyValue = $('#test1').val();
            $.ajax({
                url: "/QualityOptimization/MouldQualityReport/GetDataMQRNumberOfAnomalies",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (da) {
                    $(da).each(function (index, item) {
                        listDeviceType.push(item.DeviceType);
                        listNumber.push(item.Number);
                    })
                }
            })

            $.unique(listDeviceType);
            var myChart = echarts.init(document.getElementById('chart3'));

            var salvProName = listDeviceType;
            var salvProValue = listNumber;
            var salvProMax = [];//背景按最大值

            var max = Math.max.apply(null, salvProValue);
            for (let i = 0; i < salvProValue.length; i++) {
                salvProMax.push(max)
            }
            var Color = [
                new echarts.graphic.LinearGradient(0, 1, 1, 1, [
                    { offset: 0, color: "#EB3B5A" },
                    { offset: 1, color: "#FE9C5A" }
                ]),
                new echarts.graphic.LinearGradient(0, 1, 1, 1, [
                    { offset: 0, color: "#FA8231" },
                    { offset: 1, color: "#FFD14C" }
                ]),
                new echarts.graphic.LinearGradient(0, 1, 1, 1, [
                    { offset: 0, color: "#F7B731" },
                    { offset: 1, color: "#FFEE96" }
                ]),
                new echarts.graphic.LinearGradient(0, 1, 1, 1, [
                    { offset: 0, color: "#395CFE" },
                    { offset: 1, color: "#2EC7CF" }
                ])
            ];
            var option = {
                grid: {
                    left: '2%',
                    right: '2%',
                    bottom: '2%',
                    top: '2%',
                    containLabel: true
                },
                tooltip: {
                    trigger: 'axis',
                    axisPointer: {
                        type: 'none'
                    },
                    formatter: function (params) {
                        return params[0].name + ' : ' + params[0].value
                    }
                },
                xAxis: {
                    show: false,
                    type: 'value'
                },
                yAxis: [{
                    type: 'category',
                    inverse: true,
                    axisLabel: {
                        show: true,
                        textStyle: {
                            color: '#00000'
                        },
                    },
                    splitLine: {
                        show: false
                    },
                    axisTick: {
                        show: false
                    },
                    axisLine: {
                        show: false
                    },
                    data: salvProName                    
                }, {
                    type: 'category',
                    inverse: true,
                    axisTick: 'none',
                    axisLine: 'none',
                    show: true,
                    axisLabel: {
                        formatter: function (value) {
                            return value + "%";
                        },
                        show: true,
                        textStyle: {
                            color: '#00000',
                            fontSize: '12',
                        },
                    },
                    data: salvProValue
                }],
                series: [{
                    name: '值',
                    type: 'bar',
                    zlevel: 1,
                    itemStyle: {
                        barBorderRadius: [20, 20, 20, 20], // 圆角（左上、右上、右下、左下）
                        color: new echarts.graphic.LinearGradient(0, 0, 1, 0, [
                            '#2FAEF2', '#1CD8A8'
                        ].map((color, offset) => ({
                            color,
                            offset
                        }))), // 渐变
                    },
                    barWidth: 20,
                    data: salvProValue
                },
                {
                    name: '背景',
                    type: 'bar',
                    barWidth: 20,
                    barGap: '-100%',
                    data: salvProMax,
                    itemStyle: {
                        normal: {
                            color: 'rgba(24,31,68,0.3)',
                            barBorderRadius: 30,
                            borderColor: 'transparent',
                            barBorderRadius: 20,
                            borderWidth: 2,
                        }
                    },
                },
                ]
            };
            myChart.setOption(option, true);
        }
        function loadFour() {
            common.rendertable({
                elem: '#currentTableId',
                id: 'currentTableId',
                url: "/QualityOptimization/MouldQualityReport/GetGridJson",
                height: 400,
                toolbar: false,/*隐藏打印*/
                page: true,/*隐藏分页*/
                sqlkey: 'id',//数据库主键
                cols: [[
                    {
                        field: 'Colour', title: '', width: 50, sort: false, filter: false,
                        templet: function (d) {
                            if (d.Colour) {
                                return '<span style="padding:1px 9px;border-radius:50%;background:' + d.Colour + ';"></span>'
                            }
                        }
                    },
                    { field: 'id', title: '', sort: false, hide: false, hideAlways: true, width: 60, align: 'center' },
                    { field: 'MoldNo', title: '模具编号', width: 150, sort: true },
                    { field: 'PartNumber', title: '零件编号', width: 150, sort: true },
                    { field: 'PlannedEquipment', title: '计划设备', width: 150, sort: true },
                    {
                        field: 'StartTime', title: '开始时间', width: 200,
                        templet: function (d) {
                            if (d.StartTime) {
                                return new Date(d.StartTime).Format("yyyy-MM-dd hh:mm:ss");

                            }
                        }
                    },
                    {
                        field: 'ENDTime', title: '结束时间', width: 200,
                        templet: function (d) {
                            if (d.ENDTime) {
                                return new Date(d.ENDTime).Format("yyyy-MM-dd hh:mm:ss");

                            }
                        }
                    },
                    {
                        field: 'LatestStartTime', title: '最晚开始时间', width: 200,
                        templet: function (d) {
                            if (d.LatestStartTime) {
                                return new Date(d.LatestStartTime).Format("yyyy-MM-dd hh:mm:ss");

                            }
                        }
                    },
                    { field: 'WorkingHours', title: '标准工时', width: 100, sort: false },
                    { field: 'Customer', title: '客户', width: 150 },
                    { field: 'MoldKernelMaterial', title: '模仁材质', width: 100 },
                    { field: 'Category', title: '类别', width: 100, sort: true, filter: true },
                ]]
            });
        }
    })
</script>
