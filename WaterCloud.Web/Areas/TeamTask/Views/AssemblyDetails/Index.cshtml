                    { field: 'Material', title: '材料', width: 80 },
                    { field: 'Hardness', title: '硬度', width: 80 },
                    { field: 'Specifications', title: '规格', width: 80 },
                    { field: 'Receiver', title: '接收人员', width: 100 },
                    {
