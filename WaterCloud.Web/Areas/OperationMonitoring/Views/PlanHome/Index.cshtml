<script>
    layui.use(['jquery', 'form', 'table', 'common', 'tablePlug', "layer", 'echarts', 'element'], function () {
        var $ = layui.jquery,
            form = layui.form,
            table = layui.table,
            common = layui.common,
            layer = layui.layer,
            echarts = layui.echarts,
            element = layui.element;;
        wcLoading.close();
        $(function () {
            loadOne();
            gridList();
        });
        function loadOne() {
            var listDeviceType = new Array();
            var listDeviceName = new Array();
            var listAll = new Array();
            //var keyValue = $('#Types_id option:selected').val();
            $.ajax({
                url: "/OperationMonitoring/PlanHome/GetDataPHProgressAnalysis",
                //data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (da) {
                    $(da).each(function (index, item) {
                        listDeviceType.push(item.DeviceType);
                        listDeviceName.push(item.DeviceName);
                        listAll.push(item);
                    })
                }
            })

            $.unique(listDeviceType);
            $.unique(listDeviceName.sort());

            var series = [];
            $.each(listDeviceName, function (index, value) {
                var tempName = new Array();
                var tempArry = new Array();
                $.each(listAll, function (index1, value1) {
                    if (value == value1.DeviceName) {
                        tempName = value1.DeviceName;
                        tempArry.push(value1.Number);
                    }
                });
                series.push({
                    name: tempName,
                    type: 'bar',
                    barWidth: '15%',
                    barGap: '80%',
                    data: tempArry,
                    itemStyle: {
                        normal: {
                            label: {
                                show: true, //开启显示
                                position: 'top', //在上方显示
                                textStyle: { //数值样式
                                    color: 'red',
                                    fontSize: 12
                                }
                            }
                        }
                    },
                })
            });

            var myChart = echarts.init(document.getElementById('chart1'));

            var option = {
                color: ['#f3961d', '#6d48e6'],
                grid: {
                    top:'8%',
                    left: '0%',
                    right: '0',
                    bottom: '0%',
                    containLabel: true
                },
                legend: {
                    top:-4,
                    itemGap: 30,
                    data: listDeviceName,
                    itemWidth: 10,  //图例标记的图形宽度
                    itemHeight: 10, //图例标记的图形高度
                    textStyle: {    //图例文字的样式
                        color: '#808080',  //文字颜色
                        fontSize: 12    //文字大小
                    }
                },
                tooltip: {
                    trigger: 'axis',
                    axisPointer: { // 坐标轴指示器，坐标轴触发有效
                        type: 'shadow' // 默认为直线，可选为：'line' | 'shadow'
                    }
                },
                xAxis: [
                    {
                        //type: 'category',
                        //axisTick: { show: false },
                        //axisLabel: {
                        //    //X轴刻度配置
                        //    interval: 0 //0：表示全部显示不间隔；auto:表示自动根据刻度个数和宽度自动设置间隔个数
                        //    , rotate: 0
                        //},
                        //data: listDeviceType,

                        type: 'category',
                        data: listDeviceType,
                        axisLine: {
                            show: false,
                            lineStyle: {
                                color: '#808080',

                            }
                        },
                        axisLabel: {
                            // interval: 0,
                            // rotate: 40,
                            textStyle: {
                                fontSize: '11'
                            }
                        },
                        axisTick: { //y轴刻度线
                            show: false
                        },

                    }
                ],
                yAxis: [
                    {
                        type: 'value',
                        axisLine: {
                            show: false,
                            lineStyle: {
                                color: '#f2961d'
                            }
                        },
                        splitLine: {
                            show: true,
                            lineStyle: {
                                //color: "#57617B"
                                type: 'dashed'
                            }
                        },
                        axisTick: { //y轴刻度线
                            show: true
                        },
                        axisLabel: {}
                    }
                ],
                series: series
            };
            myChart.setOption(option, true);
            // echarts 窗口缩放自适应
            window.addEventListener("resize", function () {
                myChart.resize();
            });
        }
        function gridList() {
            common.rendertable({
                elem: '#currentTableId',
                id: 'currentTableId',
                url: "/OperationMonitoring/PlanHome/GetGridJson",
                height: 200,
                toolbar: false,/*隐藏打印*/
                page: true,/*隐藏分页*/
                sqlkey: 'id',//数据库主键
                cols: [[
                    {
                        field: 'Colour', title: '', width: 50, sort: false, filter: false,
                        templet: function (d) {
                            if (d.Colour) {
                                return '<span style="padding:1px 9px;border-radius:50%;background:' + d.Colour + ';"></span>'
                            }
                        }
                    },
                    //{ field: 'id', title: 'ID', sort: true, hide: true, hideAlways: true },
                    { field: 'CustomerName', title: '客户名', width: 160, sort: true, filter: true },
                    { field: 'CustomerCode', title: '客户代码', width: 160, sort: true },
                    { field: 'CustomerContact', title: '客户联系人', width: 160, sort: true, filter: true },
                    { field: 'LeadingCadre', title: '内部负责人', width: 160, sort: true, filter: true },
                    { field: 'DeliveryRate', title: '交付率', width: 160, sort: true},
                    { field: 'MouldNumber', title: '在制模具数量', width: 150, sort: true },
                    { field: 'NormalMold', title: '进度正常模具', width: 145, sort: true },
                    {
                        field: 'DelayMould', title: '延期模具', width: 140, sort: true, templet: function (d) {
                            var btns = "";
                            if (d.DelayMould) {
                                if (d.DelayMould > 5) {
                                    btns += '<a style="color:#ffbe6a">' + d.DelayMould + '</a>';
                                }
                                else {
                                    btns += '<a style="">' + d.DelayMould + '</a>';
                                }
                            }
                            return btns;
                        }
                    },
                ]]
            });
            // 监听搜索操作
            form.on('submit(data-search-btn)', function (data) {
                //执行搜索重载
                common.reloadtable({
                    elem: 'currentTableId',
                    curr: 1,
                    where: { keyword: $('#txt_keyword').val() }
                });
                duty = null;
                return false;
            });
        }
    })
</script>
