                        <button type="button" id="funOne" style="border: none;float: right;" class="layui-btn layui-btn-primary"><i class="fa fa-expand icon"></i></button>
                    </div>
                    <div class="layui-card-body layui-text">
                        <div id="chart1" style="height:500px;"></div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>