<script>
    layui.use(['jquery', 'form', 'table', 'common', 'optimizeSelectOption', "echarts", 'commonTable'], function () {
        var $ = layui.jquery,
            form = layui.form,
            table = layui.table,
            commonTable = layui.commonTable,
            echarts = layui.echarts,
            common = layui.common;
        wcLoading.close();
        $(function () {
            loadOne();
            loadTwo();
        });
        function loadOne() {
            var listDeviceType = new Array();
            var listDeviceName = new Array();
            var listAll = new Array();
            //var keyValue = $('#Types_id option:selected').val();
            $.ajax({
                url: "/OperationMonitoring/CustomerDetails/GetCustomerDetailsRate",
                //data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (da) {
                    $(da).each(function (index, item) {
                        listDeviceType.push(item.DeviceType);
                        listDeviceName.push(item.DeviceName);
                        listAll.push(item);
                    })
                }
            })

            $.unique(listDeviceType);
            $.unique(listDeviceName.sort());

            var series = [];
            $.each(listDeviceName, function (index, value) {
                var tempName = new Array();
                var tempArry = new Array();
                $.each(listAll, function (index1, value1) {
                    if (value == value1.DeviceName) {
                        tempName = value1.DeviceName;
                        tempArry.push(value1.Number);
                    }
                });
                series.push({
                    name: tempName,
                    type: 'bar',
                    barWidth: '15%',
                    barGap: '80%',
                    data: tempArry,
                    itemStyle: {
                        normal: {
                            label: {
                                show: true, //开启显示
                                position: 'top', //在上方显示
                                textStyle: { //数值样式
                                    color: 'red',
                                    fontSize: 12
                                },
                                formatter: '{c}%',
                            },
                            color: function (params) {
                                if (params.value <= 40) {
                                    return "#6d48e6";
                                } else if (params.value > 40) {
                                    return "#f3961d";
                                }
                                return "#febf37";
                            }
                        }
                    },
                })
            });

            var myChart = echarts.init(document.getElementById('chart1'));

            var option = {
                color: ['#f2961f', '#6d48e6', '#f70bfc'],
                grid: {
                    top: '10%',
                    left: '0%',
                    right: '0',
                    bottom: '0%',
                    containLabel: true
                },
                //legend: {
                //    itemGap: 30,
                //    data: listDeviceName,
                //    itemWidth: 10,  //图例标记的图形宽度
                //    itemHeight: 10, //图例标记的图形高度
                //    textStyle: {    //图例文字的样式
                //        color: '#808080',  //文字颜色
                //        fontSize: 12    //文字大小
                //    }
                //},
                tooltip: {
                    trigger: 'axis',
                    axisPointer: { // 坐标轴指示器，坐标轴触发有效
                        type: 'shadow' // 默认为直线，可选为：'line' | 'shadow'
                    },
                    formatter: function (params) {
                        var relVal = params[0].name;
                        for (var i = 0, l = params.length; i < l; i++) {
                            relVal += '<br/>' + params[i].marker + params[i].seriesName + ' : ' + params[i].value + "%";
                        }
                        return relVal;
                    }
                },
                xAxis: [
                    {
                        //type: 'category',
                        //axisTick: { show: false },
                        //axisLabel: {
                        //    //X轴刻度配置
                        //    interval: 0 //0：表示全部显示不间隔；auto:表示自动根据刻度个数和宽度自动设置间隔个数
                        //    , rotate: 0
                        //},
                        //data: listDeviceType,

                        type: 'category',
                        data: listDeviceType,
                        axisLine: {
                            show: false,
                            lineStyle: {
                                color: '#808080',

                            }
                        },
                        axisLabel: {
                            // interval: 0,
                            // rotate: 40,
                            textStyle: {
                                fontSize: '11'
                            }
                        },
                        axisTick: { //y轴刻度线
                            show: false
                        },

                    }
                ],
                yAxis: [
                    {
                        type: 'value',
                        splitNumber: 4,
                        axisLine: {
                            show: false,
                            lineStyle: {
                                color: '#f2961d'
                            }
                        },
                        splitLine: {
                            show: true,
                            lineStyle: {
                                //color: "#57617B"
                                type: 'dashed'
                            }
                        },
                        axisTick: { //y轴刻度线
                            show: true
                        },
                        axisLabel: {
                            formatter: function (value) {
                                return value + "%";
                            },
                            show: true,
                            textStyle: {
                                color: '#f2961d'
                            }
                        },
                    }
                ],
                series: series
            };
            myChart.setOption(option, true);
            // echarts 窗口缩放自适应
            window.addEventListener("resize", function () {
                myChart.resize();
            });
        }
        function loadTwo() {
            commonTable.rendertable({
                elem: '#currentTableId2',
                id: 'currentTableId2',
                url: '/OperationMonitoring/CustomerDetails/GetGridJson',
                height: 400,
                toolbar: false,/*隐藏打印*/
                page: true,/*隐藏分页*/
                sqlkey: 'id',//数据库主键
                cols: [[
                    { field: 'id', title: 'ID', sort: false, hide: true, width: 60, hideAlways: true },
                    { field: 'CustomerName', title: '客户名称', width: 200, sort: true },
                    { field: 'OrderNumber', title: '订单编号', width: 200, sort: false },
                    { field: 'NumberOfOrders', title: '订单数', width: 200, sort: false },
                    { field: 'DieNumber', title: '模具编号', width: 200, sort: false },
                    { field: 'ProjectLeader', title: '项目负责人', width: 200, sort: false },
                    {
                        field: 'StartTime', title: '开始时间', width: 160,
                        templet: function (d) {
                            if (d.StartTime) {
                                return new Date(d.StartTime).Format("yyyy-MM-dd hh:mm:ss");

                            }
                        }
                    },
                    {
                        field: 'EstimatedEndTime', title: '预计结束时间', width: 160,
                        templet: function (d) {
                            if (d.EstimatedEndTime) {
                                return new Date(d.EstimatedEndTime).Format("yyyy-MM-dd hh:mm:ss");

                            }
                        }
                    },
                    {
                        field: 'ActualEndTime', title: '实际结束时间', width: 160,
                        templet: function (d) {
                            if (d.ActualEndTime) {
                                return new Date(d.ActualEndTime).Format("yyyy-MM-dd hh:mm:ss");

                            }
                        }
                    },
                    { field: 'NewOldModel', title: '新模/旧模', width: 150, sort: false, filter: true },
                ]]
                , filter: {
                    bottom: false
                }
            });
            //监听行双击事件
            table.on('rowDouble(currentTableFilter)', function (obj) {
                //obj 同上
                common.modalOpen({
                    title: "客户清单子表",
                    url: "/OperationMonitoring/CustomerDetails/Form?keyValue=" + obj.data.id,
                    width: "700px",
                    height: "600px",
                    btn: []
                });
            });
        }
    })
</script>
