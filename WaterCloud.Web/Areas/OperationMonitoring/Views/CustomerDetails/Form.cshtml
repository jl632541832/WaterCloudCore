<script>
    layui.use(['jquery', 'form', 'table', 'common', 'optimizeSelectOption', "echarts", 'commonTable'], function () {
        var $ = layui.jquery,
            form = layui.form,
            table = layui.table,
            commonTable = layui.commonTable,
            echarts = layui.echarts,
            common = layui.common;
        var keyValue = $.request("keyValue");
        wcLoading.close();
        $(function () {
            loadTwo();
        });
        function loadTwo() {
            if (!!keyValue) {
                commonTable.rendertable({
                elem: '#currentTableId2',
                id: 'currentTableId2',
                url: "/OperationMonitoring/CustomerDetails/GetGridJsonKey?keyvalue=" + keyValue,
                height: 480,
                toolbar: false,/*隐藏打印*/
                page: true,/*隐藏分页*/
                sqlkey: 'id',//数据库主键
                cols: [[
                    { field: 'id', title: 'ID', sort: false, hide: true, width: 60, hideAlways: true },
                    { field: 'CustomerName', title: '客户名称', width: 120, sort: true },
                    { field: 'OrderNumber', title: '订单编号', width: 120, sort: false },
                    { field: 'NumberOfOrders', title: '订单数', width: 120, sort: false },
                    { field: 'DieNumber', title: '模具编号', width: 130, sort: false },
                    { field: 'ProjectLeader', title: '项目负责人', width: 120, sort: false },
                    {
                        field: 'StartTime', title: '开始时间', width: 160,
                        templet: function (d) {
                            if (d.StartTime) {
                                return new Date(d.StartTime).Format("yyyy-MM-dd hh:mm:ss");

                            }
                        }
                    },
                    {
                        field: 'EstimatedEndTime', title: '预计结束时间', width: 160,
                        templet: function (d) {
                            if (d.EstimatedEndTime) {
                                return new Date(d.EstimatedEndTime).Format("yyyy-MM-dd hh:mm:ss");

                            }
                        }
                    },
                    {
                        field: 'ActualEndTime', title: '实际结束时间', width: 160,
                        templet: function (d) {
                            if (d.ActualEndTime) {
                                return new Date(d.ActualEndTime).Format("yyyy-MM-dd hh:mm:ss");

                            }
                        }
                    },
                    { field: 'NewOldModel', title: '新模/旧模', width: 120, sort: false, filter: true },
                ]]
            });
            }
        }
    })
</script>
