                // echarts 窗口缩放自适应
                window.onresize = function () {
                    myChart.resize();
                }
         }
        function gridList() {
             common.rendertable({
                 elem: '#currentTableId',
                 id: 'currentTableId',
                 url: "/ProductionManage/ProductionManageHome/GetGridJson",
                 height: 220,
                 toolbar: false,/*隐藏打印*/
                 page: false,/*隐藏分页*/
                 sqlkey: 'id',//数据库主键
                 cols: [[
                     { field: 'id', title: 'ID', sort: true, hide: true, hideAlways: true },
                     { field: 'ModuleNumber', title: '模号', width: 110, sort: true },
