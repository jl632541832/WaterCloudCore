        function loadOne() {
            common.rendertable({
                elem: '#currentTableId',
                id: 'currentTableId',
                url: "/MouldDesign/DesignHome/GetGridJson?keyvalue=" + $('#test1').val(),
                height: 880,
                toolbar: false,/*隐藏打印*/
                page: true,/*隐藏分页*/
                sqlkey: 'id',//数据库主键
                cols: [[
                    { field: 'id', title: '序号', hide: false, width: 50, hideAlways: true },
                    { field: 'ModuleNumber', title: '模号', width: 80, sort: true },
                    { field: 'VersionNumber', title: '版本号', width: 70 },
                    {
                        field: 'PlanStartTime', title: '计划开始时间', width: 160,
                        templet: function (d) {
                            if (d.PlanStartTime) {
                                return new Date(d.PlanStartTime).Format("yyyy-MM-dd hh:mm:ss");

                            }
                        }
                    },
                    {
                        field: 'PlanEndTime', title: '计划结束时间', width: 160,
                        templet: function (d) {
                            if (d.PlanEndTime) {
                                return new Date(d.PlanEndTime).Format("yyyy-MM-dd hh:mm:ss");

                            }
                        }
                    },
                ]]
            });
        }
        function loadTwo() {
            var listDeviceType = new Array();
            var listDeviceName = new Array();
            var listAll = new Array();
            var keyValue = $('#test2').val();
            $.ajax({
                url: "/MouldDesign/DesignHome/GetDataDHDesignReportStatistics",
                data: { keyValue: keyValue },
                dataType: "json",
                async: false,
                success: function (da) {
                    $(da).each(function (index, item) {
                        listDeviceType.push(item.DeviceType);
                        listDeviceName.push(item.DeviceName);
                        listAll.push(item);
                    })
                }
            })

            $.unique(listDeviceType);
            $.unique(listDeviceName.sort());

            var series = [];
            $.each(listDeviceName, function (index, value) {
                var tempName = new Array();
                var tempArry = new Array();
                $.each(listAll, function (index1, value1) {
                    if (value == value1.DeviceName) {
                        tempName = value1.DeviceName;
                        tempArry.push(value1.Number);
                    }
                });
                series.push({
                    name: tempName,
                    type: 'bar',
                    barWidth: '15%',
                    barGap: '80%',
                    data: tempArry,
                    itemStyle: {
                        normal: {
                            label: {
                                show: false, //开启显示
                                position: 'top', //在上方显示
                                textStyle: { //数值样式
                                    color: 'red',
                                    fontSize: 12
                                }
                            }
                        }
                    },
                })
            });

            var myChart = echarts.init(document.getElementById('chart2'));

            var option = {
                color: ['#6d48e6','#f3961d', '#ff6239'],
                grid: {
                    top: '5%',
                    left: '0%',
                    right: '0',
