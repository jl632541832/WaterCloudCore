        wcLoading.close();
        $(function () {
            loadOne();
            loadOnes();
            loadTwo();
            loadThree();
        });
        laydate.render({
            elem: '#test1',
            eventElem: '.layui-date1',
            range: true,
            trigger: 'click',
            done: (value) => {
                //赋值
                $('#test1').val(value);
                //执行指定方法
                loadOnes();
            }
        });
        laydate.render({
            elem: '#test2',
            eventElem: '.layui-date2',
            range: true,
            trigger: 'click',
            done: (value) => {
