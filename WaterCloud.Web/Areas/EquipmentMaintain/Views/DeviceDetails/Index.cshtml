                        normal: {
                            color: new echarts.graphic.LinearGradient(0, 0, 0, 1, [{
                                offset: 0,
                                color: '#f3961d'
                            }, {
                                offset: 0.8,
                                color: '#fde9d0'
                            }], false),
                            shadowColor: 'transparent',
                            shadowBlur: 10,
                            opacity: 0.3,
                        }
                    },
                    itemStyle: {
                        normal: {
                            color: '#f3961d',
                            lineStyle: {
                                width: 1,
                                type: 'solid' //'dotted'虚线 'solid'实线
                            },
                            borderColor: '#f3961d', //图形的描边颜色。支持的格式同 color
