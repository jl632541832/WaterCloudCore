                    { field: 'Number', title: '编号', width: 100, sort: true },
                    { field: 'Name', title: '名称', width: 100, sort: true },
                    { field: 'Brand', title: '品牌', width: 100, sort: true },
                    { field: 'Department', title: '部门', width: 100, sort: true, filter: true },
                    { field: 'State', title: '状态', width: 100, sort: true, filter: true },
