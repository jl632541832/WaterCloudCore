                        field: 'DateArrival', title: '入厂日期', width: 105,
                        templet: function (d) {
                            if (d.DateArrival) {
                                return new Date(d.DateArrival).Format("yyyy-MM-dd");

                            }
                        }
                    },
                ]]
            });
        }
