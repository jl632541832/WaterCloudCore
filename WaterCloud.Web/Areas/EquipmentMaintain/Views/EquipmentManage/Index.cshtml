<script>
    layui.use(['jquery', 'form', 'table', 'common', 'tablePlug', "layer", 'echarts', 'element', 'laydate'], function () {
        var $ = layui.jquery,
            form = layui.form,
            table = layui.table,
            common = layui.common,
            layer = layui.layer,
            echarts = layui.echarts,
            element = layui.element,
            laydate = layui.laydate;
        wcLoading.close();
        $(function () {
            loadOne();
            loadTwo();
            loadThree();
            loadFour();
        });
        laydate.render({
            elem: '#test1'
            , range: true,
            done: (value) => {
                //赋值
                $('#test1').val(value);
                //执行指定方法
            }
        });
        laydate.render({
            elem: '#test2'
            , range: true,
            done: (value) => {
                //赋值
                $('#test2').val(value);
                //执行指定方法
            }
        });
        function loadOne() {
            var listName = new Array();
            var str = [];
            $.ajax({
                url: "/EquipmentMaintain/EquipmentManage/GetDataEMEquipmentStatus",
                dataType: "json",
                async: false,
                success: function (data) {
                    $(data).each(function (index, item) {
                        listName.push(item.Type);
                        var str3 = new Object();
                        str3.name = item.Type;
                        str3.value = item.Cost;
                        str[index] = str3;
                    })
                }
            });
            var myChart = echarts.init(document.getElementById('chart1'));

            var option = {
                color: ['#f28533', '#6bedfd', '#6d48e6', '#ff6239'],
                tooltip: {
                    trigger: 'item',
                    formatter: "{b} : ({c}套)"
                },
                series: [{
                    name: '',
                    type: 'pie',
                    radius: '70%',
                    center: ['45%', '60%'],
                    data: str,
                    itemStyle: {  //图形样式
                        normal: { //normal 是图形在默认状态下的样式；emphasis 是图形在高亮状态下的样式，比如在鼠标悬浮或者图例联动高亮时。
                            label: {  //饼图图形上的文本标签
                                formatter: function (params) {
                                    var percent = 0;
                                    var total = 0;
                                    for (var i = 0; i < str.length; i++) {
                                        total += str[i].value;
                                    }
                                    percent = ((params.value / total) * 100).toFixed(0);
                                    if (params.name !== '') {
                                        return params.name + '：' + params.value + '套' + '\n' + '\n' + percent + '%';
                                    } else {
                                        return '';
                                    }
                                },
                                rich: {
                                    font: {
                                        fontSize: 14,
                                        padding: [5, 0],
                                        color: '#808080'
                                    },
                                    hr: {
                                        height: 0,
                                        borderWidth: 1,
                                        width: '100%',
                                        borderColor: '#808080'
                                    }
                                }
                            },
                            //labelLine: {     //标签的视觉引导线样式
                            //    show: false  //平常不显示
                            //},
                            labelLine: {
                                length: 8,
                                length2: 8,
                                show: true,
                                color: '#00ffff'
                            }
                        },

                        //emphasis: {   //normal 是图形在默认状态下的样式；emphasis 是图形在高亮状态下的样式，比如在鼠标悬浮或者图例联动高亮时。
                        //    label: {  //饼图图形上的文本标签
                        //        show: true,
                        //        position: 'center',
                        //        textStyle: {
                        //            fontSize: '20',
                        //            fontWeight: 'bold'
                        //        }
                        //    },
                        //    itemStyle: {
                        //        shadowBlur: 10,
                        //        shadowOffsetX: 0,
                        //        shadowColor: 'rgba(0, 0, 0, 0.5)'
                        //    }
                        //}
                    }
                }]
            };
            myChart.setOption(option);
            // echarts 窗口缩放自适应
            window.addEventListener("resize", function () {
                myChart.resize();
            });
        }
        function loadTwo() {
            common.rendertable({
                elem: '#currentTableId',
                id: 'currentTableId',
                url: "/EquipmentMaintain/EquipmentManage/GetGridJson",
                height: 180,
                toolbar: false,/*隐藏打印*/
                page: true,/*隐藏分页*/
                sqlkey: 'id',//数据库主键
                cols: [[
                    { field: 'id', title: 'ID', sort: true, hide: true, hideAlways: true },
                    { field: 'Number', title: '编号', width: 150, sort: true },
                    { field: 'Name', title: '名称', width: 150, sort: true },
                    { field: 'Brand', title: '标准工时', width: 150, sort: true },
                    { field: 'Department', title: '部门', width: 150, sort: true, filter: true },
                    { field: 'State', title: '状态', width: 140, sort: true, filter: true },
                    {
                        field: 'DateArrival', title: '入场日期', width: 105,
                        templet: function (d) {
                            if (d.DateArrival) {
                                return new Date(d.DateArrival).Format("yyyy-MM-dd");

                            }
                        }
                    },
                ]]
            });
            // 监听搜索操作
            form.on('submit(data-search-btn1)', function (data) {
                //执行搜索重载
                common.reloadtable({
                    elem: 'currentTableId',
                    curr: 1,
                    where: { keyword: $('#txt_keyword').val() }
                });
                duty = null;
                return false;
            });
        }
        function loadThree() {
            common.rendertable({
                elem: '#currentTableId1',
                id: 'currentTableId1',
                url: "/EquipmentMaintain/EquipmentManage/GetDataEMMaintainPlan",
                height: 240,
                toolbar: false,/*隐藏打印*/
                page: true,/*隐藏分页*/
                sqlkey: 'id',//数据库主键
                cols: [[
                    { field: 'id', title: 'ID', sort: true, hide: true, hideAlways: true },
                    { field: 'EquipmentNumber', title: '设备编号', width: 100, sort: true },
                    { field: 'EquipmentName', title: '设备名称', width: 100, sort: true },
                    { field: 'Department', title: '部门', width: 100, sort: true, filter: true },
                    { field: 'MaintainPlan', title: '保养计划', width: 100, sort: true },
                    { field: 'MaintainType', title: '保养类型', width: 100, sort: true },
                    {
                        field: 'PlanStartTime', title: '计划开始时间', width: 100,
                        templet: function (d) {
                            if (d.PlanStartTime) {
                                return new Date(d.PlanStartTime).Format("yyyy-MM-dd");

                            }
                        }
                    },
                    {
                        field: 'PlanEndTime', title: '计划结束时间', width: 100,
                        templet: function (d) {
                            if (d.PlanEndTime) {
                                return new Date(d.PlanEndTime).Format("yyyy-MM-dd");

                            }
                        }
                    },
                    { field: 'Remarks', title: '保养备注', width: 100, sort: true, filter: true },
                ]]
            });
            // 监听搜索操作
            form.on('submit(data-search-btn2)', function (data) {
                //执行搜索重载
                common.reloadtable({
                    elem: 'currentTableId1',
                    curr: 1,
                    where: { keyvalue: $('#test1').val(), keyword: $('#txt_keyword1').val() }
                });
                duty = null;
                return false;
            });
        }
        function loadFour() {
            common.rendertable({
                elem: '#currentTableId2',
                id: 'currentTableId2',
                url: "/EquipmentMaintain/EquipmentManage/GetDataEMMaintainHistory",
                height: 240,
                toolbar: false,/*隐藏打印*/
                page: true,/*隐藏分页*/
                sqlkey: 'id',//数据库主键
                cols: [[
                    { field: 'id', title: 'ID', sort: true, hide: true, hideAlways: true },
                    { field: 'EquipmentNumber', title: '设备编号', width: 100, sort: true },
                    { field: 'EquipmentName', title: '设备名称', width: 100, sort: true },
                    { field: 'Department', title: '部门', width: 100, sort: true, filter: true },
                    { field: 'MaintainPlan', title: '保养计划', width: 100, sort: true },
                    { field: 'MaintainType', title: '保养类型', width: 100, sort: true },
                    { field: 'MaintainPersonnel', title: '保养人员', width: 100, sort: true },
                    {
                        field: 'MaintainTime', title: '保养时间', width: 100,
                        templet: function (d) {
                            if (d.MaintainTime) {
                                return new Date(d.MaintainTime).Format("yyyy-MM-dd");

                            }
                        }
                    },
                    { field: 'MaintainRecord', title: '保养记录', width: 100, sort: true, filter: true },
                ]]
            });
            // 监听搜索操作
            form.on('submit(data-search-btn3)', function (data) {
                //执行搜索重载
                common.reloadtable({
                    elem: 'currentTableId2',
                    curr: 1,
                    where: { keyvalue: $('#test2').val(), keyword: $('#txt_keyword2').val() }
                });
                duty = null;
                return false;
            });
        }
    })
</script>
